<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	<changeSet id="20230529-1" author="dl">
		<createTable tableName="properties">
			<column name="id" type="bigint"
				autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="ts" type="TIMESTAMP"
				defaultValueComputed="CURRENT_TIMESTAMP">
				<constraints nullable="true" />
			</column>
			<column name="application" type="varchar(255)">
				<constraints nullable="true" />
			</column>
			<column name="profile" type="varchar(255)">
				<constraints nullable="true" />
			</column>
			<column name="label" type="varchar(255)">
				<constraints nullable="true" />
			</column>
			<column name="k" type="varchar(255)">
				<constraints nullable="true" />
			</column>
			<column name="v" type="clob">
				<constraints nullable="true" />
			</column>
			<column name="ordering" type="int" defaultValue="0">
				<constraints nullable="true" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="20230529-2" author="dl">
		<addUniqueConstraint
			columnNames="application, profile, label, k"
			constraintName="UK_PROPERTY_1" tableName="properties" />
	</changeSet>
</databaseChangeLog>